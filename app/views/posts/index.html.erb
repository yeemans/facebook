<% if flash[:post_success] %>
  <div class="notification is-primary">
    <p> <%= flash[:post_success] %> </p>
  </div>
<% end %>
<h2 class="title is-2"> Your timeline </h2>
<%# show users last 3 posts %>
<div class="columns is-multiline">
  <% @recent_posts.concat(@friends_posts).each do |post| %>
    <% if post %>
      <div class="column is-half">
        <div class="message-header">
          <p> <%= current_user.username %> </p>
        </div>
        <div class="message-body">
          <%= post.body %>
        </div>
        <footer>
          Comment link coming soon
        </footer>
      </div>
    <% end %>
  <% end %>
</div>